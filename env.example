# 环境变量配置示例
# 复制此文件为 .env 并修改相关配置

# ==================== Prometheus 配置 ====================
PROM_URL=http://prometheus:9090
QUERY_CONDITION={pod!=""}
TIME_WINDOW_MIN=10

# ==================== 阈值配置 ====================
THRESHOLD=20
# IDLE_THRESHOLD=10  # 闲置阈值（代码中固定）

# ==================== 调度配置 ====================
INTERVAL=300
MAX_WORKERS=8

# ==================== 控制接口配置 ====================
CONTROL_API=http://your-control-service/api/optimize
CONTROL_API_ENABLED=false

# ==================== AI 配置 ====================
AI_ENABLED=false
AI_API_URL=https://api.openai.com/v1/chat/completions
AI_API_KEY=your-api-key-here
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_RETRY_TIMES=3
AI_RETRY_DELAY=2.0

# ==================== 日志配置 ====================
LOG_LEVEL=INFO

# ==================== 服务配置 ====================
HOST=0.0.0.0
PORT=8080

